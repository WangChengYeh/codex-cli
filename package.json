{
  "name": "codex-cli-desktop",
  "private": true,
  "version": "0.1.0",
  "description": "Cross-platform terminal UI for Codex CLI built with Tauri and xterm.js",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "tauri": "tauri",
    "format": "prettier --write src/**/*.{js,ts,html,css}",
    "format:check": "prettier --check src/**/*.{js,ts,html,css}",
    "lint": "eslint src --ext .js,.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:e2e:macos": "jest tests/macos-e2e.spec.js",
    "test:e2e:android": "jest tests/android-appium.spec.js",
    "test:e2e:ios": "jest tests/ios-appium.spec.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "~2",
    "@tauri-apps/plugin-fs": "~2",
    "@tauri-apps/plugin-notification": "~2",
    "@tauri-apps/plugin-shell": "~2",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0",
    "xterm-addon-webgl": "^0.16.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.1",
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0",
    "@wdio/cli": "^9.0.0",
    "@wdio/mocha-framework": "^9.0.0",
    "@wdio/spec-reporter": "^9.0.0",
    "webdriverio": "^9.0.0",
    "appium": "^2.11.0",
    "@appium/android-driver": "^3.0.0",
    "appium-xcuitest-driver": "^7.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}