{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "Codex CLI Desktop",
  "mainBinaryName": "Codex CLI Desktop",
  "version": "0.1.0",
  "identifier": "com.codexcli.desktop",
  "plugins": {},
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost ipc: http://ipc.localhost"
    },
    "windows": [
      {
        "title": "Codex CLI Desktop",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "useHttpsScheme": true
      }
    ]
  }
}